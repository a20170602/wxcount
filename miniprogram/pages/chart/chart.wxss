.top{
  height: 160rpx;
  background-image: linear-gradient(45deg,#55ACFF , #1589FE);

}

.top-box{
  padding: 0 40rpx;
  color: #fff;
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
}

.top-box .btn{
  width: 180rpx;
  /* background-color: #000; */
  position: relative;
}

.top-box .main{
  display: flex;
  align-items: center;
  width: 490rpx;
  overflow-x: auto;
  position: relative;
}


.top-box .choose{
  text-align: center;
  position: relative;
  width: 180rpx;
}

.choose .line{
  position: absolute;
  width: 1rpx;
  left: 10rpx;
  height: 35rpx;
  top: 0;
  bottom: 0;
  margin: auto;
  background-color: #fff;
}
.btn .line{
  position: absolute;
  width: 1rpx;
  right: 20rpx;
  height: 35rpx;
  top: 0;
  bottom: 0;
  margin: auto;
  background-color: #fff;
}

.btn .btn-icon,
.choose .btn-icon{
  position: absolute;
  top: 0;
  bottom: 0;
  right: 40rpx;
  margin: auto;
  width: 30rpx;
  height: 30rpx;
  /* background-color: #fff; */
}

.choose .btn-icon{
  right: 0;
}

.main .item{
  flex-shrink: 0;
  padding: 10rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #BFE0FF;
  text-align: center;
  min-width: 40rpx;
}

.active{
  background-color: #fff;
  font-weight: 600;
  color: #1589FE !important;
}



.control{
  background-color: #fff;
  width: 100%;
  height: 460rpx;
  position: relative;
}

.control-inner{
  background-color: #ffffff;
  top: -50rpx;
  width: 650rpx;
  height: 500rpx;
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
  border-radius: 20rpx;
  box-shadow: 0 0 2px #ddd;
  overflow: hidden;
  /* position: relative; */
}

.control-total{
  height: 100rpx;
  display: flex;
  padding: 10rpx 20rpx;
  position: relative;
}

.mid {
  position: absolute;
  width: 1rpx;
  height: 60rpx;
  background-color: #1589FE;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}

.control-total .title{
  width: 50%;
  text-align: center;
  overflow: hidden;
}

.title .t{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 25rpx;
  color: #AAAAAA;
  transition: all 1.2s ease;
}

.title .b{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 40rpx;
  font-weight: 600;
  color: #1589FE;
}

.bot-line{
  position: absolute;
  width: 105rpx;
  height: 4rpx;
  background-color: #1589FE;
  bottom: 0;
  /* left: 120rpx; */
  /* left: 425rpx; */
  transition: all 1.2s ease;
}


.show-list{
  padding: 10rpx 40rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.show-item{
  margin: 10rpx 0;
  display: flex;
  height: 100rpx;

}

.show-item .img{
  width: 100rpx;
  position: relative;
}

.show-item .img image{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}

.show-item .content{
  width: calc(100% - 100rpx);
  box-sizing: border-box;
  padding-left: 40rpx;
  border-bottom: 1rpx solid #ddd; 
}

.content .content-t{
  display: flex;
  justify-content:space-between;
  height: 50rpx;
  line-height: 50rpx;
}
.content .content-b{
  display: flex;
  height: 50rpx;
  line-height: 50rpx;
  justify-content: space-between;
}
.b-pro{
  padding-top: 20rpx;
  width: calc(100% - 80rpx);
}
.b-num{
  font-size: 28rpx;
}


.canvas-box{
  margin: 30rpx 0;
  width: 100%;
  height: 320rpx;
  position: relative;
}

ec-canvas {
  width: 110%;
  height: 320rpx;
}
.container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 


.skicky{
  position: sticky;
  top: 0;
  left: 0;
}

